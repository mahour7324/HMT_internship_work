nav ul {
  list-style: none;
  margin: 0;
  padding: 0;
  background-color: #f1f1f1;
  text-align: center;
}

nav li {
  display: inline-block;
  margin-right: -4px;
}

nav a {
  display: block;
  padding: 10px;
  color: #333;
  text-decoration: none;
}

nav a:hover {
  background-color: #ddd;
  color: black;
}

/* Style the main content area */
main {
  max-width: 800px;
  margin: 0 auto;
  padding: 20px;
}

article {
  margin-bottom: 20px;
}

h2 {
  color: #333;
}

/* Style the footer element */
footer {
  background-color: #333;
  color: white;
  padding: 10px;
  text-align: center;
}

footer a {
  color: white;
  text-decoration: none;
}

  </style>
  
</head>
